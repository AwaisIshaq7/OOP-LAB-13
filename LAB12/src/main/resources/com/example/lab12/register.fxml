<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab12.RegisterController">
    <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
    <VBox alignment="CENTER" prefHeight="215.0" prefWidth="149.0" spacing="10">
        <Label styleClass="header" text="Register" />
        <TextField fx:id="usernameField" promptText="Username" styleClass="text-field" />
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="text-field" />
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" styleClass="text-field" />
        <Button onAction="#handleRegister" styleClass="button" text="Register" />
        <Button onAction="#showLogin" styleClass="button" text="Back to Login" />
      <effect>
         <Glow />
      </effect>
    </VBox>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
